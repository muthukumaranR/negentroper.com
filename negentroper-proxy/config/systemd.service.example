[Unit]
Description=Negentroper Proxy Server
Documentation=https://github.com/negentroper/proxy
After=network.target

[Service]
Type=simple
User=proxy
Group=proxy
WorkingDirectory=/opt/negentroper-proxy
ExecStart=/usr/bin/node src/index.js
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=5

# Environment
Environment=NODE_ENV=production
EnvironmentFile=/opt/negentroper-proxy/.env

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/negentroper-proxy/data /opt/negentroper-proxy/logs /opt/negentroper-proxy/ssl

# Capabilities
AmbientCapabilities=CAP_NET_BIND_SERVICE
CapabilityBoundingSet=CAP_NET_BIND_SERVICE

# Limits
LimitNOFILE=65536
LimitNPROC=32768

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=negentroper-proxy

[Install]
WantedBy=multi-user.target